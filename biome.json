{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noAssignInExpressions": "off",
				"noExplicitAny": "warn"
			},
			"style": {
				"noParameterAssign": "off",
				"useTemplate": {
					"level": "warn",
					"fix": "safe"
				}
			}
		}
	}
}
